<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-4">
      <%= form_tag '/login' do %>
        <div class="card mt-5">
          <div class="card-header bg-success text-white">
            <h3 class="card-title">Login</h3>
          </div>
          <div class="card-body">
            <div class="form-group mb-2">
              <div>Email</div>
              <%= text_field_tag :email %>
            </div>
            <div class="form-group mb-2">
              <div>Password</div>
              <%= password_field_tag :password %>
            </div>
            <div class="form-group mt-4">
              <%= submit_tag "Login", class: "btn btn-success mb-4" %>
            </div>
            <%= link_to "Go To Register",  "/signup" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>